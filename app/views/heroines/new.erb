<h1> CREATE YOUR HERO HERE! </h1>

<% if flash[:errors]%>
    <% flash[:errors].each do |error| %>
    <%= error %>
    <% end %>
    <% end %>


<%= form_for @heroine do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :super_name %>
<%= f.text_field :super_name %>


<%= f.collection_select(:power_id, @powers, :id, :name, prompt: true)%>

<%= f.submit "Submit"%>

<% end %>


<br/>
<%= link_to "Go Back", heroines_path%>